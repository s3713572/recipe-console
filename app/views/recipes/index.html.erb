<p id="notice"><%= notice %></p>

<h1>Recipe</h1>

<table class="table table-striped table-hover">
  <thead class='table-dark'>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= image_tag recipe.cover_url, style: "width: 32px; height: 32px" %></td>
        <td><%= recipe.title %></td>
        <td style="max-height: 32px"><%= recipe.content.to_plain_text %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', enter_form_path, class: 'btn btn-success' %>
