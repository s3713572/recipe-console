<div class="container">
  <div class="row g-3 align-items-center">
    <div class="col-auto">
      How many foods contains in your recipe?
    </div>
    <div class="col-auto">
      <input id="count" type="number" min="1" id="count" class="form-control" value="1">
    </div>
    <div class="col-atuo">
      <button id="enter" href="" class="btn btn-warning">Confirm</button>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#enter').click(() => {
    count = $("#count").val();
    location.href = `/recipes/new?count=${count}`;
  })
</script>